- extends "cms/base.html.haml"

- block title
  活動記録の編集

- block breadcrumbs
  %li.breadcrumb-item
    %a(title="Home" href="{% url 'cms:index' %}")
      %i.fa.fa-home
      Home
  %li.breadcrumb-item
    %a(title="Records" href="{% url 'cms:life_logs' %}") Records
  %li.breadcrumb-item.active Edit

- block content
  %h4.mt-4.mb-5.border-bottom 活動記録の編集
  - if record_id
    %form{action: "{% url 'cms:edit_record' record_id=record_id %}", method: "post"}
      - include 'cms/_edit_record_form.html.haml'

  - else
    %form{action: "{% url 'cms:create_record' %}", method: "post"}
      - include 'cms/_edit_record_form.html.haml'

  %a.btn.btn-outline-secondary.btn-sm{href: "{% url 'cms:life_logs' %}"} 戻る
